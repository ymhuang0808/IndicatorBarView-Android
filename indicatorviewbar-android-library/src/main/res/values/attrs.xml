<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="IndicatorBar">

        <attr name="minValue" format="integer" />

        <attr name="maxValue" format="integer" />

        <attr name="value" format="integer" />

        <attr name="barHeight" format="dimension" />
        
        <attr name="isMultipleLevelColors" format="boolean" />

        <!-- array format for different level color -->
        <attr name="barLevelColors" format="reference" />

        <attr name="barColor" format="color" />

        <attr name="isPinColorWithBarColor" format="boolean" />

        <attr name="pinColor" format="color" />

    </declare-styleable>
</resources>